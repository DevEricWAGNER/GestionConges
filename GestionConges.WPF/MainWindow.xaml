<Window x:Class="GestionConges.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Gestion des Congés - Équipe Projets" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header avec infos utilisateur -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo et titre -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📅" FontSize="24" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Gestion des Congés" 
                             FontSize="20" FontWeight="SemiBold" 
                             Foreground="White" 
                             VerticalAlignment="Center" 
                             Margin="15,0,0,0"/>
                </StackPanel>

                <!-- Infos utilisateur -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock Name="TxtUtilisateurNom" 
                                 Text="Utilisateur connecté" 
                                 FontWeight="SemiBold" 
                                 Foreground="White" 
                                 HorizontalAlignment="Right"/>
                        <TextBlock Name="TxtUtilisateurRole" 
                                 Text="Rôle" 
                                 FontSize="12" 
                                 Foreground="White" 
                                 Opacity="0.8" 
                                 HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Bouton Mon Profil -->
                    <Button Name="BtnMonProfil" 
                          Content="👤 PROFIL" 
                          Style="{StaticResource MaterialDesignOutlineButton}"
                          Foreground="White" 
                          BorderBrush="White"
                          Padding="10,5"
                          Margin="0,0,10,0"
                          Click="BtnMonProfil_Click"/>

                    <Button Name="BtnDeconnexion" 
                          Content="DÉCONNEXION" 
                          Style="{StaticResource MaterialDesignOutlineButton}"
                          Foreground="White" 
                          BorderBrush="White"
                          Padding="15,5"
                          Click="BtnDeconnexion_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Menu de navigation -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
                <Button Name="BtnAccueil" 
                      Content="🏠 ACCUEIL" 
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Margin="0,0,10,0" 
                      Padding="20,10"
                      Click="BtnAccueil_Click"/>
                <Button Name="BtnMesConges" 
                      Content="📅 MES CONGÉS" 
                      Style="{StaticResource MaterialDesignOutlineButton}"
                      Margin="0,0,10,0" 
                      Padding="20,10"
                      Click="BtnMesConges_Click"/>
                <Button Name="BtnCalendrier" 
                      Content="📊 CALENDRIER ÉQUIPE" 
                      Style="{StaticResource MaterialDesignOutlineButton}"
                      Margin="0,0,10,0" 
                      Padding="20,10"
                      Click="BtnCalendrier_Click"/>
                <Button Name="BtnValidation" 
                      Content="✅ VALIDATIONS" 
                      Style="{StaticResource MaterialDesignOutlineButton}"
                      Margin="0,0,10,0" 
                      Padding="20,10"
                      Visibility="Collapsed"
                      Click="BtnValidation_Click"/>
                <Button Name="BtnAdmin" 
                      Content="⚙️ ADMINISTRATION" 
                      Style="{StaticResource MaterialDesignOutlineButton}"
                      Padding="20,10"
                      Visibility="Collapsed"
                      Click="BtnAdmin_Click"/>
            </StackPanel>

            <!-- Zone de contenu dynamique -->
            <Border Grid.Row="1" 
                  BorderBrush="#DDDDDD" 
                  BorderThickness="1" 
                  CornerRadius="8" 
                  Background="White">
                <Grid Name="ContentArea" Margin="20">
                    <!-- Contenu par défaut -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🏠" FontSize="60" HorizontalAlignment="Center" Foreground="#2196F3"/>
                        <TextBlock Text="Bienvenue dans l'application de gestion des congés !" 
                                 FontSize="18" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,20,0,10"/>
                        <TextBlock Name="TxtBienvenue" 
                                 Text="Utilisateur connecté" 
                                 FontSize="14" 
                                 Foreground="Gray" 
                                 HorizontalAlignment="Center"/>

                        <!-- Raccourcis -->
                        <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                            <Button Content="📝 Nouvelle demande" 
                                  Style="{StaticResource MaterialDesignRaisedButton}"
                                  Margin="10" 
                                  Padding="20,15"
                                  Click="BtnNouvelleDemandeRaccourci_Click"/>
                            <Button Content="📊 Voir le calendrier" 
                                  Style="{StaticResource MaterialDesignOutlineButton}"
                                  Margin="10" 
                                  Padding="20,15"
                                  Click="BtnCalendrier_Click"/>
                            <Button Content="👤 Mon profil" 
                                  Style="{StaticResource MaterialDesignOutlineButton}"
                                  Margin="10" 
                                  Padding="20,15"
                                  Click="BtnMonProfil_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <StatusBar Grid.Row="2" Background="#EEEEEE">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔗" VerticalAlignment="Center"/>
                    <TextBlock Text="Connecté" Margin="5,0,15,0"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="TxtStatut" Text="Prêt"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>