<UserControl x:Class="GestionConges.WPF.Controls.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="{StaticResource Background}">

    <ScrollViewer>
        <StackPanel Margin="20">

            <!-- Header Section -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Name="TxtBienvenue" 
                             Text="Bienvenue dans votre espace congés !" 
                             FontSize="28" FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimary}"
                             Margin="0,0,0,8"/>
                    <TextBlock Text="Gérez vos demandes de congés en toute simplicité" 
                             FontSize="16" 
                             Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Name="TxtDateFrancaise" 
                             FontSize="14" FontWeight="SemiBold"
                             Foreground="{StaticResource TextSecondary}"
                             HorizontalAlignment="Right"/>
                    <TextBlock Name="TxtHeureCourante"
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource Primary}"
                             HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>

            <!-- Stats Cards -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Solde Congés -->
                <Border Grid.Column="0" Style="{StaticResource Card}" 
                        Margin="0,0,8,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource Secondary}" 
                                    Width="32" Height="32" CornerRadius="8" 
                                    Margin="0,0,12,0">
                                <TextBlock Text="💰" FontSize="16" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Jours Restants" 
                                     FontSize="12" FontWeight="SemiBold"
                                     Foreground="{StaticResource TextMuted}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Name="TxtSoldeCongés" Text="0" 
                                 FontSize="32" FontWeight="Bold" 
                                 Foreground="{StaticResource Secondary}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="jours disponibles" FontSize="11" 
                                 Foreground="{StaticResource TextMuted}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Demandes en cours -->
                <Border Grid.Column="1" Style="{StaticResource Card}" 
                        Margin="4,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource Warning}" 
                                    Width="32" Height="32" CornerRadius="8" 
                                    Margin="0,0,12,0">
                                <TextBlock Text="⏳" FontSize="16" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="En Attente" 
                                     FontSize="12" FontWeight="SemiBold"
                                     Foreground="{StaticResource TextMuted}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Name="TxtDemandesEnAttente" Text="0" 
                                 FontSize="32" FontWeight="Bold" 
                                 Foreground="{StaticResource Warning}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="demandes en cours" FontSize="11" 
                                 Foreground="{StaticResource TextMuted}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Congés cette année -->
                <Border Grid.Column="2" Style="{StaticResource Card}" 
                        Margin="4,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource Primary}" 
                                    Width="32" Height="32" CornerRadius="8" 
                                    Margin="0,0,12,0">
                                <TextBlock Text="📅" FontSize="16" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Jours Pris" 
                                     FontSize="12" FontWeight="SemiBold"
                                     Foreground="{StaticResource TextMuted}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Name="TxtJoursPrisCetteAnnee" Text="0" 
                                 FontSize="32" FontWeight="Bold" 
                                 Foreground="{StaticResource Primary}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Name="TxtLabelJoursPris" Text="jours utilisés" FontSize="11" 
                                 Foreground="{StaticResource TextMuted}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Équipe -->
                <Border Grid.Column="3" Style="{StaticResource Card}" 
                        Margin="8,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource Danger}" 
                                    Width="32" Height="32" CornerRadius="8" 
                                    Margin="0,0,12,0">
                                <TextBlock Text="👥" FontSize="16" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Équipe" 
                                     FontSize="12" FontWeight="SemiBold"
                                     Foreground="{StaticResource TextMuted}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Name="TxtAbsentsAujourdhui" Text="0" 
                                 FontSize="32" FontWeight="Bold" 
                                 Foreground="{StaticResource Danger}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="absents aujourd'hui" FontSize="11" 
                                 Foreground="{StaticResource TextMuted}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Section Activité Récente -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border Background="{StaticResource Secondary}" 
                                    Width="32" Height="32" CornerRadius="8" 
                                    Margin="0,0,12,0">
                                <TextBlock Text="📈" FontSize="16" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Activité Récente" 
                                     FontSize="18" FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="2" Content="Voir tout" 
                                Style="{StaticResource MaterialDesignOutlineButton}"
                                Padding="12,6" FontSize="12"
                                Click="BtnVoirToutActivite_Click"/>
                    </Grid>

                    <!-- Liste activité -->
                    <StackPanel Name="PanelActiviteRecente">
                        <!-- Les activités seront ajoutées dynamiquement -->
                    </StackPanel>

                    <!-- Message si aucune activité -->
                    <Border Name="PanelAucuneActivite" 
                            Background="{StaticResource Gray50}" 
                            CornerRadius="8" Padding="20" 
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📭" FontSize="32" 
                                     HorizontalAlignment="Center" 
                                     Margin="0,0,0,8"/>
                            <TextBlock Text="Aucune activité récente" 
                                     FontSize="16" FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Vos demandes de congés apparaîtront ici" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"
                                     HorizontalAlignment="Center"
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>