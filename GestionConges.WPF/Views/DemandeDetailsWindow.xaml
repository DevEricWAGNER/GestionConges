<Window x:Class="GestionConges.WPF.Views.DemandeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détails de la Demande" 
        Height="650" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="12" Background="{StaticResource Background}" 
            BorderBrush="{StaticResource Gray300}" BorderThickness="1"
            Effect="{StaticResource ShadowLarge}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête avec titre et statut -->
            <Border Grid.Row="0" Style="{StaticResource Card}" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icône -->
                    <Border Grid.Column="0" Background="{StaticResource Primary}" 
                            Width="40" Height="40" CornerRadius="10" 
                            Margin="0,0,16,0">
                        <TextBlock Text="📋" FontSize="20" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Titre -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Name="TxtTitre" Text="Détails de la Demande"
                                 FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Informations complètes de votre demande" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextMuted}"/>
                    </StackPanel>

                    <!-- Badge statut -->
                    <Border Grid.Column="2" Name="BorderStatut" 
                            Padding="12,6" CornerRadius="20" 
                            VerticalAlignment="Center"
                            Margin="0,0,12,0">
                        <TextBlock Name="TxtStatut" Text="STATUT" 
                                 FontWeight="SemiBold" 
                                 Foreground="White" FontSize="11"/>
                    </Border>

                    <!-- Bouton fermer -->
                    <Button Grid.Column="3" Content="✕" 
                            Width="32" Height="32" 
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="{StaticResource Gray400}"
                            FontSize="16"
                            Click="BtnFermer_Click"
                            ToolTip="Fermer"/>
                </Grid>
            </Border>

            <!-- Contenu principal -->
            <ScrollViewer Grid.Row="1" Margin="0,0,0,20">
                <StackPanel>

                    <!-- Informations principales -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{StaticResource Secondary}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📄" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Informations Principales" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Type -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                         Text="Type :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,16,12" 
                                         VerticalAlignment="Top"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" 
                                          Margin="0,0,0,12">
                                    <Border Name="BorderTypeColor" Width="20" Height="20" 
                                          CornerRadius="4" Margin="0,0,8,0" 
                                          VerticalAlignment="Center"/>
                                    <TextBlock Name="TxtType" 
                                             VerticalAlignment="Center"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>

                                <!-- Période -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                         Text="Période :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,16,12"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtPeriode" 
                                         Margin="0,0,0,12"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>

                                <!-- Durée -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                         Text="Durée :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,16,12"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Name="TxtDuree" 
                                         Margin="0,0,0,12"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>

                                <!-- Demandeur -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                         Text="Demandeur :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,16,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Name="TxtDemandeur" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Commentaires -->
                    <Border Name="BorderCommentaire" Style="{StaticResource Card}" 
                            Margin="0,0,0,16" Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Border Background="{StaticResource Primary}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="💬" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Commentaire" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border Background="{StaticResource Gray50}" 
                                    BorderBrush="{StaticResource Gray200}" BorderThickness="1"
                                    CornerRadius="8" Padding="16">
                                <TextBlock Name="TxtCommentaire" TextWrapping="Wrap" 
                                         FontStyle="Italic"
                                         Foreground="{StaticResource TextSecondary}"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Motif de refus -->
                    <Border Name="BorderRefus" Background="{StaticResource Surface}" 
                            BorderBrush="{StaticResource Danger}" BorderThickness="2" 
                            CornerRadius="12" Padding="20" Margin="0,0,0,16" 
                            Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{StaticResource Danger}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="❌" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Motif de refus" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource Danger}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Name="TxtMotifRefus" TextWrapping="Wrap" 
                                     Foreground="{StaticResource Danger}"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Informations techniques -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Border Background="{StaticResource Warning}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📊" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Informations Techniques" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID :" 
                                         FontSize="12" FontWeight="SemiBold"
                                         Foreground="{StaticResource TextMuted}"
                                         Margin="0,0,16,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Name="TxtId" 
                                         FontSize="12" Margin="0,0,0,8"
                                         Foreground="{StaticResource TextSecondary}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Créée le :" 
                                         FontSize="12" FontWeight="SemiBold"
                                         Foreground="{StaticResource TextMuted}"
                                         Margin="0,0,16,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtDateCreation" 
                                         FontSize="12" Margin="0,0,0,8"
                                         Foreground="{StaticResource TextSecondary}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Name="LblDateModification" 
                                         Text="Modifiée le :" 
                                         FontSize="12" FontWeight="SemiBold"
                                         Foreground="{StaticResource TextMuted}"
                                         Margin="0,0,16,8" Visibility="Collapsed"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Name="TxtDateModification" 
                                         FontSize="12" Margin="0,0,0,8"
                                         Foreground="{StaticResource TextSecondary}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Name="LblDateValidation" 
                                         Text="Validée le :" 
                                         FontSize="12" FontWeight="SemiBold"
                                         Foreground="{StaticResource TextMuted}"
                                         Margin="0,0,16,0" Visibility="Collapsed"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Name="TxtDateValidation" 
                                         FontSize="12"
                                         Foreground="{StaticResource TextSecondary}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Historique des validations -->
                    <Border Name="BorderValidations" Style="{StaticResource Card}" 
                            Margin="0,0,0,16" Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Border Background="{StaticResource Secondary}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📜" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Historique des Validations" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <ItemsControl Name="LvValidations" MaxHeight="200">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource Gray50}" 
                                                CornerRadius="8" Padding="12" 
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding ValidationIcon}" 
                                                         FontSize="20" VerticalAlignment="Center" 
                                                         Margin="0,0,12,0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ValidateurNom}" 
                                                             FontWeight="SemiBold"
                                                             Foreground="{StaticResource TextPrimary}"/>
                                                    <TextBlock Text="{Binding Commentaire}" 
                                                             FontStyle="Italic" 
                                                             Foreground="{StaticResource TextSecondary}"
                                                             Visibility="{Binding CommentaireVisible}"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" Text="{Binding DateValidation}" 
                                                         FontSize="11" VerticalAlignment="Center" 
                                                         Foreground="{StaticResource TextMuted}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Boutons d'action -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="BtnModifier" Content="Modifier"
                            Style="{StaticResource MaterialDesignOutlineButton}"
                            Margin="0,0,8,0"
                            Click="BtnModifier_Click" 
                            Visibility="Collapsed"/>

                    <Button Name="BtnDupliquer" Content="Dupliquer"
                            Style="{StaticResource MaterialDesignOutlineButton}"
                            Margin="0,0,8,0"
                            Click="BtnDupliquer_Click"/>

                    <Button Name="BtnSupprimer" Content="Supprimer"
                            Style="{StaticResource DangerButton}"
                            Margin="0,0,12,0"
                            Click="BtnSupprimer_Click" 
                            Visibility="Collapsed"/>

                    <Button Name="BtnFermer" Content="Fermer"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="BtnFermer_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>