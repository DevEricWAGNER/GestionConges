<Window x:Class="GestionConges.WPF.Views.AjouterJourFerieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un Jour Férié" 
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="📅 Ajouter un Jour Férié" 
                 FontSize="18" FontWeight="Bold" 
                 HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Date -->
        <TextBlock Grid.Row="1" Text="Date :" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="2" Name="DpDate" Padding="5" Margin="0,0,0,15"/>

        <!-- Nom -->
        <TextBlock Grid.Row="3" Text="Nom :" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" Name="TxtNom" Padding="8" Margin="0,0,0,15" MaxLength="100"/>

        <!-- Type -->
        <TextBlock Grid.Row="5" Text="Type :" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="6" Name="CmbType" Padding="5" Margin="0,0,0,20">
            <ComboBoxItem Content="National" IsSelected="True"/>
            <ComboBoxItem Content="Local"/>
            <ComboBoxItem Content="Religieux"/>
            <ComboBoxItem Content="Entreprise"/>
        </ComboBox>

        <!-- Boutons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="BtnAjouter" Content="✅ Ajouter"
                  Background="#4CAF50" Foreground="White" BorderThickness="0"
                  Padding="20,10" Margin="0,0,10,0" Click="BtnAjouter_Click"/>
            <Button Name="BtnAnnuler" Content="❌ Annuler"
                  Background="#757575" Foreground="White" BorderThickness="0"
                  Padding="20,10" Click="BtnAnnuler_Click"/>
        </StackPanel>
    </Grid>
</Window>