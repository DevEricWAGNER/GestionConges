<Window x:Class="GestionConges.WPF.Views.MotifRefusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motif de Refus" 
        Height="750" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="16" Background="{StaticResource Background}"
            BorderBrush="{StaticResource Gray300}" BorderThickness="1"
            Effect="{StaticResource ShadowLarge}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource Surface}" 
                    CornerRadius="16,16,0,0" 
                    BorderBrush="{StaticResource Gray200}" 
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="60" Margin="24,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo et titre -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" 
                              VerticalAlignment="Center">
                        <Border Background="{StaticResource Danger}" 
                              Width="40" Height="40" 
                              CornerRadius="12" Margin="0,0,16,0">
                            <TextBlock Text="❌" FontSize="20" 
                                     Foreground="White"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Refus de Demande" 
                                     FontSize="18" FontWeight="SemiBold" 
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Motif de refus requis" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Bouton fermer -->
                    <Button Grid.Column="2" Content="✕" 
                          Width="36" Height="36" 
                          Background="Transparent" 
                          BorderThickness="0" 
                          Foreground="{StaticResource Gray400}"
                          FontSize="16" FontWeight="Bold"
                          Cursor="Hand"
                          Click="BtnClose_Click"/>
                </Grid>
            </Border>

            <!-- Contenu principal -->
            <ScrollViewer Grid.Row="1" Padding="32" Background="{StaticResource Background}">
                <StackPanel MaxWidth="500">

                    <!-- Informations sur la demande -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{StaticResource Primary}" 
                                      Width="32" Height="32" 
                                      CornerRadius="8" Margin="0,0,12,0">
                                    <TextBlock Text="📋" FontSize="16" 
                                             Foreground="White"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Demande à refuser" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Demandeur -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                         Text="👤 Demandeur :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,8,16,8" 
                                         VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                         Name="TxtDemandeur" 
                                         Foreground="{StaticResource TextPrimary}"
                                         FontWeight="Medium"
                                         Margin="0,8" 
                                         TextWrapping="Wrap"/>

                                <!-- Type -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                         Text="🏷️ Type :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,8,16,8" 
                                         VerticalAlignment="Top"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" 
                                          Orientation="Horizontal" 
                                          Margin="0,8">
                                    <Border Name="BorderCouleurType" 
                                          Width="20" Height="16" 
                                          CornerRadius="4"
                                          Margin="0,0,12,0" 
                                          VerticalAlignment="Center"/>
                                    <TextBlock Name="TxtTypeAbsence"
                                             Foreground="{StaticResource TextPrimary}"
                                             FontWeight="Medium"
                                             VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Période -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                         Text="📅 Période :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,8,16,8" 
                                         VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                         Name="TxtPeriode" 
                                         Foreground="{StaticResource TextPrimary}"
                                         FontWeight="Medium"
                                         Margin="0,8"/>

                                <!-- Durée -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                         Text="⏱️ Durée :" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,8,16,8" 
                                         VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                         Name="TxtDuree" 
                                         Foreground="{StaticResource TextPrimary}"
                                         FontWeight="Medium"
                                         Margin="0,8"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Zone de saisie du motif -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{StaticResource Warning}" 
                                      Width="32" Height="32" 
                                      CornerRadius="8" Margin="0,0,12,0">
                                    <TextBlock Text="📝" FontSize="16" 
                                             Foreground="White"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Motif du refus" 
                                             FontSize="16" FontWeight="SemiBold" 
                                             Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Expliquez clairement la raison du refus" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Zone de texte principale -->
                            <TextBox Name="TxtMotifRefus"
                                   Height="140"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"
                                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                   VerticalContentAlignment="Top"
                                   MaxLength="1000"
                                   FontSize="14"
                                   Margin="0,0,0,12"/>

                            <!-- Compteur de caractères -->
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Right" 
                                      Margin="0,0,0,20">
                                <TextBlock Name="TxtCompteurCaracteres" 
                                         Text="0/1000 caractères" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextMuted}"/>
                            </StackPanel>

                            <!-- Motifs prédéfinis -->
                            <TextBlock Text="💡 Motifs suggérés" 
                                     FontWeight="SemiBold" FontSize="14" 
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,12"/>
                            <TextBlock Text="Cliquez sur un motif pour l'ajouter automatiquement" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"
                                     Margin="0,0,0,16"/>

                            <WrapPanel>
                                <Button Name="BtnMotif1" Content="Planning surchargé"
                                      Style="{StaticResource MaterialDesignOutlineButton}"
                                      FontSize="12"
                                      Padding="12,6" 
                                      Margin="0,0,8,8"
                                      Click="BtnMotifPredéfini_Click"/>
                                <Button Name="BtnMotif2" Content="Période de forte activité"
                                      Style="{StaticResource MaterialDesignOutlineButton}"
                                      FontSize="12"
                                      Padding="12,6" 
                                      Margin="0,0,8,8"
                                      Click="BtnMotifPredéfini_Click"/>
                                <Button Name="BtnMotif3" Content="Congés déjà accordés à d'autres"
                                      Style="{StaticResource MaterialDesignOutlineButton}"
                                      FontSize="12"
                                      Padding="12,6" 
                                      Margin="0,0,8,8"
                                      Click="BtnMotifPredéfini_Click"/>
                                <Button Name="BtnMotif4" Content="Préavis insuffisant"
                                      Style="{StaticResource MaterialDesignOutlineButton}"
                                      FontSize="12"
                                      Padding="12,6" 
                                      Margin="0,0,8,8"
                                      Click="BtnMotifPredéfini_Click"/>
                                <Button Name="BtnMotif5" Content="Solde de congés insuffisant"
                                      Style="{StaticResource MaterialDesignOutlineButton}"
                                      FontSize="12"
                                      Padding="12,6" 
                                      Margin="0,0,8,8"
                                      Click="BtnMotifPredéfini_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons d'action -->
            <Border Grid.Row="2" 
                    Background="{StaticResource Surface}" 
                    BorderBrush="{StaticResource Gray200}" 
                    BorderThickness="0,1,0,0" 
                    CornerRadius="0,0,16,16"
                    Padding="32,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="BtnConfirmerRefus" 
                          Content="❌ Confirmer le Refus"
                          Style="{StaticResource DangerButton}"
                          Padding="24,12" 
                          Margin="0,0,12,0"
                          Click="BtnConfirmerRefus_Click"/>

                    <Button Name="BtnAnnuler" 
                          Content="🔙 Annuler"
                          Background="{StaticResource Gray500}" 
                          Foreground="White" 
                          BorderThickness="0"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Padding="24,12"
                          Click="BtnAnnuler_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>