<Window x:Class="GestionConges.WPF.Views.MotifRefusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motif de Refus" 
        Height="700" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="❌" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Refus de Demande de Congés"
                     FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Informations sur la demande -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                Padding="15" Margin="0,0,0,15" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="📋 Demande à refuser :" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="👤 Demandeur :" FontWeight="SemiBold" Margin="0,2,10,2"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Name="TxtDemandeur" Margin="0,2"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="🏷️ Type :" FontWeight="SemiBold" Margin="0,2,10,2"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,2">
                        <Border Name="BorderCouleurType" Width="16" Height="12" 
                                Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Name="TxtTypeAbsence"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="📅 Période :" FontWeight="SemiBold" Margin="0,2,10,2"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Name="TxtPeriode" Margin="0,2"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="⏱️ Durée :" FontWeight="SemiBold" Margin="0,2,10,2"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Name="TxtDuree" Margin="0,2"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Zone de saisie du motif -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                Padding="15" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="📝 Motif du refus :" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="Veuillez indiquer clairement la raison du refus :" 
                         FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>

                <TextBox Name="TxtMotifRefus"
                       Height="120"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       VerticalScrollBarVisibility="Auto"
                       Padding="10"
                       MaxLength="1000"
                       BorderBrush="#CCCCCC"
                       BorderThickness="1"
                       IsEnabled="True"
                       IsReadOnly="False"
                       Focusable="True"
                       IsTabStop="True"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Name="TxtCompteurCaracteres" Text="0/1000 caractères" 
                             FontSize="11" Foreground="Gray"/>
                </StackPanel>

                <!-- Motifs prédéfinis -->
                <TextBlock Text="💡 Motifs suggérés (cliquez pour ajouter) :" 
                         FontWeight="SemiBold" FontSize="12" Margin="0,15,0,10"/>
                <WrapPanel>
                    <Button Name="BtnMotif1" Content="Planning surchargé" 
                          Background="#E3F2FD" Foreground="#1976D2" BorderBrush="#2196F3"
                          Padding="8,4" Margin="0,0,5,5" FontSize="11"
                          Click="BtnMotifPredéfini_Click"/>
                    <Button Name="BtnMotif2" Content="Période de forte activité" 
                          Background="#E3F2FD" Foreground="#1976D2" BorderBrush="#2196F3"
                          Padding="8,4" Margin="0,0,5,5" FontSize="11"
                          Click="BtnMotifPredéfini_Click"/>
                    <Button Name="BtnMotif3" Content="Congés déjà accordés à d'autres" 
                          Background="#E3F2FD" Foreground="#1976D2" BorderBrush="#2196F3"
                          Padding="8,4" Margin="0,0,5,5" FontSize="11"
                          Click="BtnMotifPredéfini_Click"/>
                    <Button Name="BtnMotif4" Content="Préavis insuffisant" 
                          Background="#E3F2FD" Foreground="#1976D2" BorderBrush="#2196F3"
                          Padding="8,4" Margin="0,0,5,5" FontSize="11"
                          Click="BtnMotifPredéfini_Click"/>
                    <Button Name="BtnMotif5" Content="Solde de congés insuffisant" 
                          Background="#E3F2FD" Foreground="#1976D2" BorderBrush="#2196F3"
                          Padding="8,4" Margin="0,0,5,5" FontSize="11"
                          Click="BtnMotifPredéfini_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Name="BtnConfirmerRefus" 
                  Content="❌ Confirmer le Refus"
                  Background="#F44336" Foreground="White" BorderThickness="0"
                  Padding="20,10" Margin="0,0,10,0"
                  Click="BtnConfirmerRefus_Click"/>

            <Button Name="BtnAnnuler" 
                  Content="🔙 Annuler"
                  Background="#757575" Foreground="White" BorderThickness="0"
                  Padding="20,10"
                  Click="BtnAnnuler_Click"/>
        </StackPanel>
    </Grid>
</Window>