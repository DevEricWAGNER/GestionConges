<Window x:Class="GestionConges.WPF.Views.EditerRegleTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Éditer les Règles du Type d'Absence" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="12" Background="{StaticResource Background}" 
            BorderBrush="{StaticResource Gray300}" BorderThickness="1"
            Effect="{StaticResource ShadowLarge}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête avec type d'absence -->
            <Border Grid.Row="0" Style="{StaticResource Card}" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Indicateur couleur et infos -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Name="BorderCouleurType" Width="32" Height="32" 
                                CornerRadius="8" Margin="0,0,16,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Name="TxtNomType" Text="Type d'Absence" 
                                     FontSize="18" FontWeight="Bold"
                                     Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Configuration des règles spécifiques" 
                                     FontSize="12" 
                                     Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Bouton fermer -->
                    <Button Grid.Column="2" Content="✕" 
                            Width="32" Height="32" 
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="{StaticResource Gray400}"
                            FontSize="16"
                            Click="BtnAnnuler_Click"
                            ToolTip="Fermer"/>
                </Grid>
            </Border>

            <!-- Contenu principal -->
            <ScrollViewer Grid.Row="1" Margin="0,0,0,20">
                <StackPanel>

                    <!-- Section Limites Quantitatives -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{StaticResource Primary}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="📊" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Limites Quantitatives" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Maximum par an -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Maximum de jours par an" 
                                             FontSize="14" FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Name="TxtMaximumParAn" 
                                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                           ToolTip="Laissez vide pour aucune limite"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1" Name="ChkIllimiteParAn" Content="Illimité" 
                                        VerticalAlignment="Bottom" Margin="16,0,0,12"
                                        Checked="ChkIllimiteParAn_Checked" 
                                        Unchecked="ChkIllimiteParAn_Unchecked"/>
                            </Grid>

                            <!-- Maximum consécutif -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Maximum de jours consécutifs" 
                                             FontSize="14" FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Name="TxtMaximumConsecutif" 
                                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                           ToolTip="Laissez vide pour aucune limite"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1" Name="ChkIllimiteConsecutif" Content="Illimité" 
                                        VerticalAlignment="Bottom" Margin="16,0,0,12"
                                        Checked="ChkIllimiteConsecutif_Checked" 
                                        Unchecked="ChkIllimiteConsecutif_Unchecked"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Section Délais -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{StaticResource Warning}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="⏰" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Délais Spécifiques" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Préavis minimum -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Préavis minimum (jours)" 
                                             FontSize="14" FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Name="TxtPreavisMinimum" 
                                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                           ToolTip="Laissez vide pour utiliser le préavis global"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1" Name="ChkPreavisGlobal" Content="Global" 
                                        VerticalAlignment="Bottom" Margin="16,0,0,12"
                                        Checked="ChkPreavisGlobal_Checked" 
                                        Unchecked="ChkPreavisGlobal_Unchecked"/>
                            </Grid>

                            <!-- Anticipation maximum -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Anticipation maximum (jours)" 
                                             FontSize="14" FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Name="TxtAnticipationMaximum" 
                                           Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                           ToolTip="Laissez vide pour utiliser l'anticipation globale"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1" Name="ChkAnticipationGlobal" Content="Global" 
                                        VerticalAlignment="Bottom" Margin="16,0,0,12"
                                        Checked="ChkAnticipationGlobal_Checked" 
                                        Unchecked="ChkAnticipationGlobal_Unchecked"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Section Options -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="{StaticResource Secondary}" 
                                        Width="32" Height="32" CornerRadius="8" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="⚙️" FontSize="16" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Options Supplémentaires" 
                                         FontSize="16" FontWeight="SemiBold" 
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <CheckBox Name="ChkNecessiteJustification" 
                                    Content="Nécessite une justification écrite" 
                                    FontSize="14"
                                    Foreground="{StaticResource TextPrimary}"
                                    Margin="0,0,0,16"/>

                            <!-- Règles personnalisées -->
                            <StackPanel>
                                <TextBlock Text="Règles personnalisées" 
                                         FontSize="14" FontWeight="SemiBold"
                                         Foreground="{StaticResource TextPrimary}"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Ex: Certificat médical requis au-delà de 3 jours, Pas pendant les périodes de pointe..." 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextMuted}"
                                         FontStyle="Italic" 
                                         Margin="0,8,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Informations supplémentaires -->
                    <Border Background="{StaticResource Gray50}" 
                            BorderBrush="{StaticResource Secondary}" BorderThickness="1" 
                            CornerRadius="8" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{StaticResource Secondary}" 
                                        Width="24" Height="24" CornerRadius="12" 
                                        Margin="0,0,12,0">
                                    <TextBlock Text="💡" FontSize="12" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Informations importantes" 
                                         FontWeight="SemiBold" FontSize="14"
                                         Foreground="{StaticResource TextPrimary}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" FontSize="12" 
                                     Foreground="{StaticResource TextSecondary}"
                                     LineHeight="18">
                                • Les valeurs vides utilisent les paramètres globaux<LineBreak/>
                                • Les règles spécifiques prévalent sur les règles globales<LineBreak/>
                                • Les validations s'appliquent lors de la création des demandes
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Boutons d'action -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Espace pour pousser les boutons à droite -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="BtnAnnuler" Content="Annuler"
                            Style="{StaticResource MaterialDesignOutlineButton}"
                            Margin="0,0,12,0"
                            Click="BtnAnnuler_Click"/>
                    <Button Name="BtnSauvegarder" Content="Sauvegarder"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="BtnSauvegarder_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>