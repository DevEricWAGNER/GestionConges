<Window x:Class="GestionConges.WPF.Views.GestionPolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Pôles - Administration" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" 
                 Text="Gestion des Pôles"
                 FontSize="24" FontWeight="Bold"
                 Margin="0,0,0,20"
                 HorizontalAlignment="Center"/>

        <!-- Liste des pôles -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" Background="White">
            <DataGrid Name="DgPoles" 
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="Column"
                    SelectionMode="Single"
                    SelectionChanged="DgPoles_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="150"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250"/>
                    <DataGridTextColumn Header="Équipes" Binding="{Binding Equipes.Count}" Width="80"/>
                    <DataGridTextColumn Header="Employés" Binding="{Binding Employes.Count}" Width="80"/>
                    <DataGridCheckBoxColumn Header="Actif" Binding="{Binding Actif}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" 
                  HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button Name="BtnNouveauPole" Content="Nouveau Pôle"
                  Background="#4CAF50" Foreground="White" BorderThickness="0"
                  Padding="15,8" Margin="0,0,10,0" Click="BtnNouveauPole_Click"/>
            <Button Name="BtnModifier" Content="Modifier"
                  Background="#FF9800" Foreground="White" BorderThickness="0"
                  Padding="15,8" Margin="0,0,10,0" 
                  IsEnabled="False" Click="BtnModifier_Click"/>
            <Button Name="BtnSupprimer" Content="Supprimer"
                  Background="#F44336" Foreground="White" BorderThickness="0"
                  Padding="15,8" Margin="0,0,10,0" 
                  IsEnabled="False" Click="BtnSupprimer_Click"/>
            <Button Name="BtnActiver" Content="Activer/Désactiver"
                  Background="#2196F3" Foreground="White" BorderThickness="0"
                  Padding="15,8" 
                  IsEnabled="False" Click="BtnActiver_Click"/>
        </StackPanel>

        <!-- Panneau de détail/édition -->
        <Border Grid.Row="1" Grid.Column="2" 
              BorderBrush="#CCCCCC" BorderThickness="1" 
              Background="White" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="PanneauDetail">
                    <TextBlock Text="Détails / Édition" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- Nom -->
                    <TextBlock Text="Nom du pôle :" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Name="TxtNom" Padding="5" Margin="0,0,0,10"/>

                    <!-- Description -->
                    <TextBlock Text="Description :" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Name="TxtDescription" 
                           Padding="5" 
                           Height="80" 
                           TextWrapping="Wrap" 
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           Margin="0,0,0,10"/>

                    <!-- Actif -->
                    <CheckBox Name="ChkActif" Content="Pôle actif" Margin="0,10,0,20"/>

                    <!-- Gestion des équipes -->
                    <Separator Margin="0,10,0,10"/>
                    <TextBlock Text="Équipes associées :" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                    <!-- Liste des équipes associées -->
                    <TextBlock Text="Équipes actuelles :" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ListBox Name="LstEquipesAssociees" 
                           Height="100" 
                           BorderBrush="#CCCCCC" 
                           BorderThickness="1" 
                           Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Nom}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" (" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Societe.Nom}" Foreground="Gray"/>
                                    <TextBlock Text=")" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Ajouter une équipe -->
                    <TextBlock Text="Ajouter une équipe :" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <ComboBox Name="CmbEquipes" 
                            Padding="5" 
                            Margin="0,0,0,10"
                            IsEnabled="False">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Nom}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" (" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Societe.Nom}" Foreground="Gray"/>
                                    <TextBlock Text=")" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Boutons de gestion des équipes -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button Name="BtnAjouterEquipe" Content="Ajouter Équipe"
                              Background="#4CAF50" Foreground="White" BorderThickness="0"
                              Padding="10,5" Margin="0,0,5,0" 
                              Click="BtnAjouterEquipe_Click" IsEnabled="False"/>
                        <Button Name="BtnRetirerEquipe" Content="Retirer Équipe"
                              Background="#F44336" Foreground="White" BorderThickness="0"
                              Padding="10,5" Margin="5,0,0,0" 
                              Click="BtnRetirerEquipe_Click" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Boutons de validation -->
                    <Separator Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button Name="BtnSauvegarder" Content="Sauvegarder"
                              Background="#4CAF50" Foreground="White" BorderThickness="0"
                              Padding="15,8" Margin="0,0,10,0" 
                              Click="BtnSauvegarder_Click" IsEnabled="False"/>
                        <Button Name="BtnAnnuler" Content="Annuler"
                              Background="#757575" Foreground="White" BorderThickness="0"
                              Padding="15,8" 
                              Click="BtnAnnuler_Click" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Informations supplémentaires -->
                    <Separator Margin="0,10,0,10"/>
                    <TextBlock Name="TxtInfos" Text="Sélectionnez un pôle pour voir les détails"
                             TextWrapping="Wrap" FontStyle="Italic" Foreground="Gray"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Bouton Fermer -->
        <Button Grid.Row="2" Grid.Column="2" Content="Fermer"
              Background="#757575" Foreground="White" BorderThickness="0"
              Padding="15,8" HorizontalAlignment="Right"
              Click="BtnFermer_Click"/>
    </Grid>
</Window>